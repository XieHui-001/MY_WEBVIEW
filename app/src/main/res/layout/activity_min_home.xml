<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/linerxml">

        <TextView
            android:id="@+id/default_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="http://192.168.1.111:8081"
            android:textColor="#d3d3d3"
            android:textSize="18dp" />

        <Button
            android:id="@+id/Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/default_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="修改" />


        <RelativeLayout
            android:id="@+id/home_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/default_data"
            android:layout_marginTop="50dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/update_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="修改默认地址"/>

            <Button
                android:id="@+id/affirm_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_data"
                android:layout_centerHorizontal="true"
                android:text="确认修改" />
        </RelativeLayout>

        <Button
            android:id="@+id/href_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="进入" />
    </RelativeLayout>
</RelativeLayout>